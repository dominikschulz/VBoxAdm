sub is_local_domain {
    my $dbh    = shift;
    my $domain = shift;

    my $query = "SELECT COUNT(*) FROM domains WHERE name = ?";
    my $sth   = $dbh->prepare($query)
      or die( "Could not prepare Query $query: " . DBI->errstr );
    $sth->execute($domain)
      or die( "Could not execute Query $query: " . $sth->errstr );
    my $count = $sth->fetchrow_array();
    $sth->finish();

    return $count;
}

