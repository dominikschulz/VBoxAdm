            $self->add_message( 'error', $self->{lh}->maketext( $msg, $email ) );
            $msg1 = $self->{lh_en}->maketext( $msg, $email );
        }
    }
    else {
        my $msg = 'Invalid email given. Please provide a valid RFC822 email address.';
