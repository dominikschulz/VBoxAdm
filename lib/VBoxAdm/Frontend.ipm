sub get_domain_byid {
    my $self      = shift;
    my $domain_id = shift;

    my $query = "SELECT name FROM domains WHERE id = ?";

    # Get our database connection
    my $dbh = $self->dbh();

    my $sth = $dbh->prepare($query)
      or syslog( 2, 'get_domain_byid - Could not prepare Query: %s, Error: %s', $query, DBI->errstr );
