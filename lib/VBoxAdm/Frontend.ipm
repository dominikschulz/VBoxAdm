    if ($alias_id) {
        my $query = "SELECT a.local_part,d.name FROM aliases AS a LEFT JOIN domains AS d ON a.domain_id = d.id WHERE a.id = ?";
        my $sth   = $dbh->prepare($query);
        $sth->execute($alias_id);
        $alias_name = $sth->fetchrow_array();
