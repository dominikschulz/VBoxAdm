      or syslog( 2, 'get_domain_byid - Could not execute Query: %s, Args: %s, Error: %s', $query, $domain_id, $sth->errstr );

    my $domain = $sth->fetchrow_array() || '';
    $sth->finish();
    return $domain;
}

